<?xml version="1.0" encoding="utf-8"?><!--    the header layout with back button, name and prof pic--><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/llHeader"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:padding="@dimen/material_size_8"    android:orientation="horizontal"    android:background="?android:attr/selectableItemBackground">    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/ivProfileImage"        android:layout_width="60dp"        android:layout_height="60dp"        android:scaleType="centerCrop"        android:src="@drawable/ic_profile_placeholder"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />    <TextView        android:id="@+id/tvProfileName"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_8"        android:ellipsize="end"        android:fontFamily="@font/roboto"        android:lines="1"        android:singleLine="true"        android:text="Jane Doe"        android:textColor="@color/gray700"        android:textStyle="normal"        android:textSize="20sp"        app:layout_constraintBottom_toTopOf="@+id/tvRecentMessage"        app:layout_constraintHorizontal_chainStyle="spread_inside"        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintWidth_percent=".6" />    <TextView        android:id="@+id/tvRecentMessage"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_8"        android:ellipsize="marquee"        android:layout_marginEnd="@dimen/material_size_4"        android:fontFamily="@font/roboto"        android:lines="1"        android:singleLine="true"        android:text="Something something message sent recent"        android:textColor="@color/gray600"        android:textSize="14sp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"        app:layout_constraintTop_toBottomOf="@+id/tvProfileName" />    <TextView        android:id="@+id/tvStatus"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:fontFamily="@font/roboto"        android:text="Online"        android:textSize="14sp"        android:textColor="@color/grey"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:layout_marginTop="@dimen/material_size_8"        /></androidx.constraintlayout.widget.ConstraintLayout>