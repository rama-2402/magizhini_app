<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/material_size_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lytTimestamp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".2"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/grey"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvTransactionIDText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/grey"        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTransactionAmountText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".5"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/grey"        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintTop_toBottomOf="@id/tvTransactionIDText"
        app:layout_constraintStart_toStartOf="@id/tvTransactionIDText" />

    <TextView
        android:id="@+id/tvOrderIDText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".6"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/grey"        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintTop_toBottomOf="@id/tvTransactionAmountText"
        app:layout_constraintStart_toStartOf="@id/tvTransactionAmountText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>