<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="@drawable/shape_bottom_sheet_background"
    >

    <ImageView
        android:id="@+id/ivBottomSheetIndicator"
        android:layout_width="@dimen/material_size_48"
        android:layout_height="@dimen/material_size_4"
        android:src="@drawable/bg_dialog_indicator"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/material_size_16"
        android:layout_marginEnd="@dimen/material_size_16"
        android:layout_marginTop="@dimen/material_size_32"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:layout_marginBottom="@dimen/material_size_16"
            android:nestedScrollingEnabled="true"
            android:textColor="@color/gray700"
            android:paddingBottom="@dimen/material_size_16"
            />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>