<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:elevation="@dimen/material_size_32"
        android:background="@drawable/shape_round_rectangle_16"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        >

        <ImageView
            android:id="@+id/ivBottomSheetIndicator"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_dialog_indicator"
            />

        <ListView
            android:id="@+id/lvBottomList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:divider="@null"
            android:nestedScrollingEnabled="true"
            android:dividerHeight="0dp"
            />
    </LinearLayout>
</layout>
