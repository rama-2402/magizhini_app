<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytSub"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rectangle_8"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/material_size_4"
    android:layout_marginBottom="@dimen/material_size_4"
    android:layout_marginStart="@dimen/material_size_8"
    android:layout_marginEnd="@dimen/material_size_8"
    android:elevation="@dimen/material_size_4">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/green_light"
        android:elevation="@dimen/material_size_2"
        android:padding="@dimen/material_size_4"
        android:text="Rs: 00.00 - Due On: 00/00/0000"
        android:textColor="@color/green_base"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/gray700"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/material_size_8"
        android:layout_marginEnd="@dimen/material_size_8"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/tvSubIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_size_4"
        android:fontFamily="@font/roboto"
        android:text="Order ID: "
        android:textColor="@color/gray700"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvProductName"
        app:layout_constraintTop_toBottomOf="@id/tvProductName" />

    <TextView
        android:id="@+id/tvSubID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="left"
        android:longClickable="true"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/material_size_4"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray700"
        android:textIsSelectable="true"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSubIDText"
        app:layout_constraintStart_toEndOf="@id/tvSubIDText"
        app:layout_constraintEnd_toStartOf="@+id/ivCalendar"
        app:layout_constraintTop_toTopOf="@id/tvSubIDText" />

    <TextView
        android:id="@+id/tvSubDurationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_size_4"
        android:fontFamily="@font/roboto"
        android:text="Duration: "
        android:textColor="@color/gray700"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvSubIDText"
        app:layout_constraintTop_toBottomOf="@id/tvSubIDText" />

    <TextView
        android:id="@+id/tvSubDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="00/00/0000 - 00/00/0000"
        android:textColor="@color/gray700"
        android:textSize="14dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginEnd="@dimen/material_size_4"
        android:scrollHorizontally="true"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/ivCalendar"
        app:layout_constraintBottom_toBottomOf="@id/tvSubDurationTxt"
        app:layout_constraintStart_toEndOf="@id/tvSubDurationTxt"
        app:layout_constraintTop_toTopOf="@id/tvSubDurationTxt" />

    <TextView
        android:id="@+id/tvAddressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_8"
        android:layout_marginTop="@dimen/material_size_4"
        android:singleLine="false"
        android:text="Delivery Address: "
        android:textColor="@color/gray700"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubDurationTxt" />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_size_4"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/gray700"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/material_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvAddressTxt"
        app:layout_constraintTop_toBottomOf="@id/tvSubDuration" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvSubStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_8"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray700"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toStartOf="@id/btnSend"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnSend"
        android:layout_width="125dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_order_history_cancel"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="@dimen/material_size_12"
            android:paddingBottom="@dimen/material_size_12"
            android:paddingStart="@dimen/material_size_12"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ru.nikartm.support.ImageBadgeView
        android:id="@+id/ivCalendar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:padding="4dp"
        android:scaleType="center"
        app:ibv_badgeValue="0"
        app:ibv_badgeTextSize="12sp"
        app:ibv_fixedBadgeRadius="8dp"
        app:ibv_badgeTextStyle="bold"
        app:ibv_badgeTextColor="#ffffff"
        app:ibv_badgeColor="@color/matteRed"
        app:ibv_badgeLimitValue="false"
        app:layout_constraintBottom_toTopOf="@+id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_calendar"
        android:layout_marginEnd="@dimen/material_size_16"
        app:tint="@color/green_base"/>


</androidx.constraintlayout.widget.ConstraintLayout>