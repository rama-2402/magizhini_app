<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rotation="180"
        android:elevation="@dimen/material_size_16"
        android:background="@drawable/bg_top_rounded_32"/>

        <ImageView
            android:id="@+id/ivBottomCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".9"
            android:background="@drawable/bg_onboarding_circle"
            app:layout_constraintBottom_toBottomOf="@id/ivBackground"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/material_size_16"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-36dp"
        android:layout_marginTop="-44dp"
        android:background="@drawable/bg_onboarding_circle"
        android:elevation="@dimen/material_size_16"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".9" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/material_size_64"
        android:layout_height="@dimen/material_size_64"
        android:src="@drawable/bg_onboarding_circle_gradient"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:layout_marginEnd="@dimen/material_size_32"
        android:rotation="330"
        app:layout_constraintBottom_toTopOf="@+id/ivBottomCircle"
        android:elevation="@dimen/material_size_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>