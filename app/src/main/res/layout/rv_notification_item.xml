<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llNotificationBody"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/material_size_8"
    android:paddingStart="@dimen/material_size_8"
    android:paddingEnd="@dimen/material_size_8">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textSize="14sp"
        android:textColor="@color/gray700" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/gray700" />
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="someghitn something"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/material_size_4"
        android:textColor="@color/gray700"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        android:layout_marginTop="@dimen/material_size_4"/>
    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/material_size_12"
        />
</LinearLayout>