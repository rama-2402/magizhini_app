<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:id="@+id/clCart"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProductItem"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/material_size_8"
        android:elevation="@dimen/material_size_4"
        android:background="@drawable/shape_round_rectangle_8"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProductThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/product_thumbnail"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_app_placeholder"
            android:background="?android:attr/selectableItemBackground"
            app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
            />
        <View
            android:id="@+id/ivCountBg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@drawable/bg_gradient_transparent_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Available: 500"
            android:layout_marginBottom="@dimen/material_size_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDiscountLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_margin="@dimen/material_size_4"
            android:background="@drawable/shape_round_rectangle_6"
            android:backgroundTint="@color/green_base"
            android:elevation="@dimen/material_size_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvUpto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_size_4"
                android:text="UPTO"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvDiscountAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvDiscountType"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvDiscountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_size_2"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@id/tvDiscountAmt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDiscountAmt"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_size_4"
                android:text="Off"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="somename"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/clProductItem"
        app:layout_constraintTop_toTopOf="@id/clProductItem"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_16"
        android:layout_marginTop="@dimen/material_size_8"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="Rs: 500"
        android:textColor="@color/green_base"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/clProductItem"
        app:layout_constraintTop_toBottomOf="@id/tvProductName" />

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="Rs: 500"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/spProductVariant"
        app:layout_constraintEnd_toEndOf="@+id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivRemove"
        android:layout_height="@dimen/material_size_32"
        android:layout_width="@dimen/material_size_32"
        android:src="@drawable/ic_down_pointer"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:tint="@color/green_base"
        android:layout_marginEnd="@dimen/material_size_8"
        app:layout_constraintBottom_toTopOf="@+id/spProductVariant"
        app:layout_constraintEnd_toStartOf="@id/tvOrderCount"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"/>

    <TextView
        android:id="@+id/tvOrderCount"
        android:layout_width="@dimen/material_size_32"
        android:layout_height="@dimen/material_size_32"
        android:text="10"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gray700"
        android:layout_marginStart="@dimen/material_size_8"
        android:layout_marginEnd="@dimen/material_size_8"
        app:layout_constraintEnd_toStartOf="@id/ivAdd"
        app:layout_constraintBottom_toTopOf="@id/spProductVariant"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAdd"
            android:layout_height="@dimen/material_size_32"
            android:layout_width="@dimen/material_size_32"
            android:src="@drawable/ic_up_pointer"
            app:tint="@color/green_base"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="@dimen/material_size_16"
            app:layout_constraintBottom_toTopOf="@+id/spProductVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName"/>

    <Spinner
        android:id="@+id/spProductVariant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_8"
        android:layout_marginEnd="@dimen/material_size_8"
        android:theme="@style/mySpinnerItemStyle"
        android:popupBackground="@drawable/shape_round_rectangle_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivDelete"
        app:layout_constraintStart_toEndOf="@id/clProductItem"
        app:layout_constraintTop_toBottomOf="@id/tvDiscount"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:layout_constraintTop_toTopOf="@id/spProductVariant"
        app:layout_constraintBottom_toBottomOf="@id/spProductVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spProductVariant"
        android:src="@drawable/ic_delete"
        android:layout_marginStart="@dimen/material_size_8"
        android:layout_marginEnd="@dimen/material_size_16"
        android:contentDescription="@string/favorites_icon"
        app:tint="@color/matteRed" />

</androidx.constraintlayout.widget.ConstraintLayout>
