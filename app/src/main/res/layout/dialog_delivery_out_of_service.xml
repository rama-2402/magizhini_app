<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_round_rectangle_16"
        android:paddingTop="@dimen/material_size_8"
        android:paddingStart="@dimen/material_size_8"
        android:paddingEnd="@dimen/material_size_8"
        android:paddingBottom="@dimen/material_size_8">
    <ImageView
        android:id="@+id/ivBottomSheetIndicator"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_dialog_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/page_three"
        app:layout_constraintTop_toBottomOf="@id/ivBottomSheetIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sit Tight! We're Coming Soon!"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Out Team is tirelessly working to bring our faster delivery services to your location. \n \n In the Meantime you can still place order. Your Order will be delivered on upcoming Saturday/Sunday."
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/gray700"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="close"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/matteRed"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="@dimen/material_size_8"
        android:paddingBottom="@dimen/material_size_8"
        android:layout_marginTop="@dimen/material_size_16"
        android:layout_marginBottom="@dimen/material_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>