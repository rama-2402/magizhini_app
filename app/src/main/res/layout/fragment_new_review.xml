<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.voidapp.magizhiniorganics.magizhiniorganics.ui.product.ProductViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.fragments.NewReviewFragment"
    android:orientation="vertical"
    android:background="@drawable/shape_round_rectangle_8"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/material_size_32"
    >

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/srSmileyRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_size_16" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etlDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:gravity="top"
        android:hint="Review"
        app:boxStrokeColor="@color/green_base"
        android:textColorHint="@color/grey"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey"
        app:flow_wrapMode="aligned"
        app:hintTextColor="@color/green_base"
        android:layout_margin="@dimen/material_size_16"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:overScrollMode="ifContentScrolls"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:textColorHint="@color/green_base"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="8dp"
        app:elevation="8dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_base"
        app:icon="@drawable/ic_save"
        android:text="save review"/>
</LinearLayout>
<!--</androidx.core.widget.NestedScrollView>-->

</layout>