<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.voidapp.magizhiniorganics.magizhiniorganics.ui.product.ProductViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.fragments.NewReviewFragment"
    android:orientation="vertical"
    android:background="@drawable/shape_round_rectangle_8"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/material_size_32"
    android:paddingBottom="@dimen/material_size_32"

    >

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/srSmileyRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_size_16" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivReviewImage"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/material_size_16"
        android:layout_marginEnd="@dimen/material_size_16"
        android:elevation="@dimen/material_size_8"
        android:layout_marginTop="@dimen/material_size_8"
        android:layout_height="200dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etlDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Delivery Note"
        android:layout_margin="@dimen/material_size_16"
        app:boxStrokeColor="@color/green_base"
        app:flow_wrapMode="aligned"
        app:endIconMode="clear_text"
        android:textColorHint="@color/grey"
        android:isScrollContainer="true"
        app:hintTextColor="@color/green_base"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        app:layout_constraintTop_toBottomOf="@id/spDeliveryPreference"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:isScrollContainer="true"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:textColorHint="@color/green_base"
            android:textColor="@color/black"
            android:textCursorDrawable="@null" />
    </com.google.android.material.textfield.TextInputLayout>

