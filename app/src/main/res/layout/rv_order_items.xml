<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:paddingTop="@dimen/material_size_8"    android:id="@+id/itemView"    android:background="?android:attr/selectableItemBackground"    android:foreground="?android:attr/selectableItemBackground"    android:paddingStart="@dimen/material_size_16"    android:paddingEnd="@dimen/material_size_16">    <TextView        android:id="@+id/tvOrderIdTxt"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/order_id"        android:textSize="14sp"        android:textStyle="bold"        android:textColor="@color/gray700"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/tvOrderId"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_8"        android:text="12345678"        android:textColor="@color/gray700"        android:longClickable="true"        android:textSize="14sp"        android:textIsSelectable="true"        app:layout_constraintStart_toEndOf="@id/tvOrderIdTxt"        app:layout_constraintTop_toTopOf="@id/tvOrderIdTxt" />    <TextView        android:id="@+id/tvPurchaseDateTxt"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="@color/gray700"        android:layout_marginTop="@dimen/material_size_8"        android:text="@string/purchase_date"        android:textSize="14sp"        android:textStyle="bold"        app:layout_constraintStart_toStartOf="@id/tvOrderIdTxt"        app:layout_constraintTop_toBottomOf="@id/tvOrderIdTxt" />    <TextView        android:id="@+id/tvPurchaseDate"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="@color/gray700"        android:layout_marginStart="@dimen/material_size_8"        android:text="21/12/2021"        android:textSize="14sp"        app:layout_constraintStart_toEndOf="@id/tvPurchaseDateTxt"        app:layout_constraintTop_toTopOf="@id/tvPurchaseDateTxt" />    <TextView        android:id="@+id/tvTotalOrderCountTxt"        android:layout_width="wrap_content"        android:textColor="@color/gray700"        android:layout_height="wrap_content"        android:text="Payment - "        android:textSize="14sp"        android:textStyle="bold"        android:layout_marginTop="@dimen/material_size_8"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/tvPurchaseDateTxt" />    <TextView        android:id="@+id/tvPaymentStatus"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_8"        android:text="(paid - UPI)"        android:textColor="@color/green_base"        android:textSize="14sp"        android:textStyle="normal"        app:layout_constraintStart_toEndOf="@id/tvCartPrice"        app:layout_constraintTop_toTopOf="@id/tvCartPrice" />    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/ivShowCart"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:background="?android:attr/selectableItemBackgroundBorderless"        android:src="@drawable/ic_cart"        app:layout_constraintEnd_toEndOf="@+id/tvOrderStatus"        app:layout_constraintStart_toStartOf="@+id/tvOrderStatus"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toTopOf="@id/tvOrderStatus"        app:layout_constraintVertical_chainStyle="spread"        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"        app:tint="@color/green_base" />    <TextView        android:id="@+id/tvCartPrice"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Rs: 500"        android:layout_marginStart="@dimen/material_size_4"        android:textColor="@color/gray700"        app:layout_constraintTop_toTopOf="@id/tvTotalOrderCountTxt"        app:layout_constraintBottom_toBottomOf="@id/tvTotalOrderCountTxt"        app:layout_constraintStart_toEndOf="@id/tvTotalOrderCountTxt"/>    <TextView        android:id="@+id/tvOrderStatus"        android:layout_width="wrap_content"        android:layout_height="0dp"        app:layout_constraintHeight_percent=".5"        android:text="(pending)"        android:textColor="@color/yellow900"        android:gravity="center_vertical"        android:textSize="14sp"        android:textStyle="normal"        android:background="?android:attr/selectableItemBackgroundBorderless"        app:layout_constraintBottom_toBottomOf="@+id/view"        app:layout_constraintTop_toBottomOf="@id/ivShowCart"        app:layout_constraintEnd_toEndOf="parent"        tools:layout_editor_absoluteX="355dp" />    <View        android:id="@+id/view"        android:layout_width="match_parent"        android:layout_height="0.75dp"        android:background="@color/grey"        android:layout_gravity="center"        android:layout_marginTop="@dimen/material_size_12"        app:layout_constraintTop_toBottomOf="@id/tvPaymentStatus"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        /></androidx.constraintlayout.widget.ConstraintLayout>