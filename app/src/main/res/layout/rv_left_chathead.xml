<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:maxWidth="240dp"    android:layout_height="wrap_content"    android:elevation="@dimen/material_size_2"    android:layout_gravity="start"    android:background="?android:attr/selectableItemBackground"    android:layout_marginStart="@dimen/material_size_4"    android:layout_marginTop="@dimen/material_size_4">    <TextView        android:id="@+id/tvMessageContent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text=""        android:textColor="@color/black"        android:maxWidth="200dp"        android:padding="@dimen/material_size_8"        android:gravity="start"        android:background="@drawable/bg_left_chat_head"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        />    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/ivImageMessage"        android:layout_width="150dp"        android:layout_height="200dp"        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"        android:visibility="gone"        android:transitionName="thumbnail"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintBottom_toBottomOf="parent" />    <TextView        android:id="@+id/tvChatTimestamp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="seen"        android:textSize="12sp"        android:textColor="@color/grey"        android:gravity="end"        android:visibility="gone"        android:maxWidth="200dp"        android:layout_marginStart="@dimen/material_size_8"        app:layout_constraintTop_toBottomOf="@id/tvMessageContent"        app:layout_constraintStart_toStartOf="@id/tvMessageContent"        /></androidx.constraintlayout.widget.ConstraintLayout>