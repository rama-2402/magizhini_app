<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="@color/white"    android:layout_height="wrap_content">     <ImageView        android:id="@+id/clProductItem"        android:layout_width="130dp"        android:layout_height="140dp"        android:layout_margin="@dimen/material_size_8"        android:elevation="@dimen/material_size_4"         android:backgroundTint="@color/grey"        android:background="@drawable/shape_round_rectangle_8"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"         android:contentDescription="shimmer_thumbnail_placeholder">    </ImageView>    <TextView        android:id="@+id/tvOne"        android:layout_width="200dp"        android:layout_height="wrap_content"        android:background="@drawable/shape_round_rectangle_8"        android:backgroundTint="@color/grey"        android:layout_marginStart="@dimen/material_size_16"        app:layout_constraintStart_toEndOf="@id/clProductItem"        app:layout_constraintTop_toTopOf="@id/clProductItem"        />    <TextView        android:id="@+id/tvTwo"        android:layout_width="100dp"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_16"        android:layout_marginTop="@dimen/material_size_8"        android:background="@drawable/shape_round_rectangle_8"        android:backgroundTint="@color/grey"        app:layout_constraintStart_toEndOf="@id/clProductItem"        app:layout_constraintTop_toBottomOf="@id/tvOne" />    <TextView        android:id="@+id/tvThree"        android:layout_width="100dp"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/material_size_8"        android:background="@drawable/shape_round_rectangle_8"        android:backgroundTint="@color/grey"        app:layout_constraintStart_toStartOf="@id/tvTwo"        app:layout_constraintTop_toBottomOf="@id/tvTwo" />        <ImageView            android:id="@+id/spProductVariant"            android:layout_width="100dp"            android:layout_height="@dimen/material_size_32"            android:layout_marginStart="@dimen/material_size_8"            android:layout_marginEnd="@dimen/material_size_8"            android:background="@drawable/shape_round_rectangle_8"            android:backgroundTint="@color/grey"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginBottom="@dimen/material_size_8"            /></androidx.constraintlayout.widget.ConstraintLayout>