<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="@string/page_one_title"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginTop="@dimen/eighty"
        android:layout_marginStart="@dimen/material_size_32"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/tvBodyOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/body_one"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/material_size_64"
        android:lineSpacingExtra="@dimen/material_size_16"
        android:layout_marginEnd="@dimen/material_size_32"
        android:layout_marginStart="@dimen/material_size_32"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/next_screen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/material_size_32"
        android:layout_marginBottom="@dimen/material_size_48"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/vp_right_arrow"
       />

        <ImageView
            android:id="@+id/bgFruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:src="@drawable/fruits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_signin_button_text"
            android:textColor="@color/green_base"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:visibility="gone"
            android:layout_marginRight="@dimen/material_size_32"
            android:layout_marginBottom="@dimen/material_size_64"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</layout>