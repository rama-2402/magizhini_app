<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".ui.cwm.allCWM.AllCWMActivity"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/apbAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_base"
            android:gravity="center"
            android:layout_gravity="center"
            app:iconTint="@color/white"
            android:layout_marginBottom="@dimen/material_size_8">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tbToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivBackBtn"
                    android:padding="@dimen/material_size_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    app:tint="@color/matteRed"
                    android:layout_marginEnd="@dimen/material_size_16"/>
                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cook With Magizhini"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/material_size_8"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivHowTo"
                    android:layout_width="@dimen/material_size_24"
                    android:layout_height="@dimen/material_size_24"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_help"
                    android:layout_marginEnd="@dimen/material_size_16"
                    android:contentDescription="@string/favorites_icon"
                    app:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCWM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_size_16"/>
    </LinearLayout>
</layout>