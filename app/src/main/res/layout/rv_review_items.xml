<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/material_size_16">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="@dimen/material_size_48"
        android:layout_height="@dimen/material_size_48"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvProfileName"/>
    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VOID"
        android:textSize="16sp"
        android:textColor="@color/gray700"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_16"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic"
        app:layout_constraintStart_toEndOf="@id/ivProfilePic"
        app:layout_constraintEnd_toStartOf="@id/tvReviewText"
        android:layout_marginEnd="@dimen/material_size_8"/>
    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="22/2/2021"
        android:textSize="12sp"
        android:textColor="@color/gray700"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/material_size_8"
        android:layout_marginStart="@dimen/material_size_16"
        app:layout_constraintStart_toEndOf="@id/ivProfilePic"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName"
        app:layout_constraintBottom_toBottomOf="@id/ivProfilePic"
        app:layout_constraintEnd_toStartOf="@id/tvReviewText"/>

        <TextView
        android:id="@+id/tvReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:textSize="16sp"
        android:textColor="@color/gray700"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/material_size_8"
        app:layout_constraintTop_toTopOf="@id/ivReview"
        app:layout_constraintBottom_toBottomOf="@id/ivReview"
        app:layout_constraintEnd_toStartOf="@id/ivReview"/>

    <ImageView
        android:id="@+id/ivReview"
        android:layout_width="@dimen/material_size_32"
        android:layout_height="@dimen/material_size_32"
        android:src="@drawable/sm_awesome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic"
        app:layout_constraintBottom_toBottomOf="@id/ivProfilePic"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/material_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfilePic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="somethign semething something"
            android:layout_marginTop="@dimen/material_size_8"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray700"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivReviewImage"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/material_size_8"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app_placeholder"
            android:layout_height="200dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>