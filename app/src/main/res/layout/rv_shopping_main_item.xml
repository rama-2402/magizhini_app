<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_size_4"
    android:elevation="@dimen/material_size_2"
    android:foreground="?android:selectableItemBackgroundBorderless"
    android:background="@drawable/shape_round_rectangle_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProductItem"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/shape_round_rectangle_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProductThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
            android:contentDescription="@string/product_thumbnail"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_app_placeholder"
            android:transitionName="thumbnail"
            android:layout_marginBottom="@dimen/material_size_4"
            android:elevation="@dimen/material_size_2"
            />

        <View
            android:id="@+id/ivCountBg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@drawable/bg_gradient_transparent_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Available: 500"
            android:layout_marginBottom="@dimen/material_size_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:id="@+id/clDiscountLayout"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/bg_discount"-->
<!--            android:padding="@dimen/material_size_4"-->
<!--            android:elevation="4dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent">-->

            <TextView
                android:id="@+id/tvDiscountAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2E85B6"
                android:textStyle="bold"
                android:textSize="12sp"
                android:elevation="@dimen/material_size_2"
                android:padding="@dimen/material_size_4"
                android:paddingStart="@dimen/material_size_8"
                android:paddingEnd="@dimen/material_size_8"
                android:background="@drawable/bg_discount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="somename"
        android:textColor="@color/gray700"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_4"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clProductItem"
        />

    <TextView
        android:id="@+id/tvProductVariant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="somename"
        android:textColor="@color/gray700"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_4"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvRs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        />

    <TextView
        android:id="@+id/tvRs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_size_8"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="@dimen/material_size_4"
        android:singleLine="true"
        android:text="Rs: "
        android:textColor="@color/matteRed"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/material_size_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProductVariant"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_4"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="0"
        android:textColor="@color/matteRed"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvRs"
        app:layout_constraintTop_toTopOf="@id/tvRs"
        app:layout_constraintBottom_toBottomOf="@id/tvRs"/>

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="Rs: 0"
        android:textColor="@color/green_base"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="@dimen/material_size_8"
        app:layout_constraintEnd_toStartOf="@id/ivCart"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
        app:layout_constraintStart_toEndOf="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="@+id/tvPrice" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCart"
        android:layout_width="@dimen/material_size_32"
        android:layout_height="@dimen/material_size_32"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/green_base"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        android:contentDescription="@string/product_thumbnail"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:transitionName="thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginBottom="@dimen/material_size_4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>