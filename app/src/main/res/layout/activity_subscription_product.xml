<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.subscriptions.SubscriptionProductActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/tbAppBar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/tbCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@color/transparent"
                app:contentScrim="@color/green_base"
                app:expandedTitleMargin="@dimen/material_size_16"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:titleCollapseMode="scale"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/ivProductThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerInside"
                    android:transitionName="thumbnail"
                    android:src="@drawable/ic_app_placeholder"
                    app:layout_collapseMode="parallax" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_gradient_transparent" />

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/material_size_8"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tbCollapsedToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStart="16dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                    app:title="">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivWallet"
                        android:layout_width="@dimen/material_size_24"
                        android:layout_height="@dimen/material_size_24"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/material_size_16"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/favorites_icon"
                        android:src="@drawable/ic_wallet"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                        app:tint="@color/white" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!--    MAIN BODY LAYOUT-->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/svBody"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/clProductDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_size_8"
                    android:layout_marginTop="@dimen/material_size_8"
                    android:layout_marginEnd="@dimen/material_size_8"
                    android:layout_marginBottom="@dimen/material_size_4"
                    android:background="@drawable/shape_round_rectangle_8"
                    android:elevation="@dimen/material_size_4"
                    android:padding="@dimen/material_size_8">

                    <TextView
                        android:id="@+id/tvVariantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="Variant: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/spVariants"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/spVariants" />

                    <Spinner
                        android:id="@+id/spVariants"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="@dimen/material_size_8"
                        android:layout_marginEnd="@dimen/material_size_8"
                        android:background="@drawable/bg_material_box"
                        android:gravity="left"
                        android:paddingStart="@dimen/material_size_8"
                        android:popupBackground="@drawable/shape_round_rectangle_8"
                        android:theme="@style/mySpinnerItemStyle"
                        app:layout_constraintBottom_toBottomOf="@id/tvVariantName"
                        app:layout_constraintEnd_toStartOf="@id/ivInfo"
                        app:layout_constraintStart_toEndOf="@id/tvVariantName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/material_size_8"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="MRP : "
                        android:textColor="@color/gray700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvVariantName"
                        app:layout_constraintTop_toBottomOf="@id/spVariants" />

                    <TextView
                        android:id="@+id/tvOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_size_8"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="(incl GST)"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="@id/tvDiscountedPrice"
                        app:layout_constraintStart_toEndOf="@id/tvDiscountedPrice"
                        app:layout_constraintTop_toTopOf="@id/tvDiscountedPrice" />

                    <TextView
                        android:id="@+id/tvDiscountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_size_8"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="Rs.5000"
                        android:textColor="@color/gray700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
                        app:layout_constraintStart_toEndOf="@id/tvPrice"
                        app:layout_constraintTop_toTopOf="@id/tvPrice" />


                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/material_size_8"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="Subscribe From: "
                        android:textColor="@color/gray700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvPrice"
                        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

