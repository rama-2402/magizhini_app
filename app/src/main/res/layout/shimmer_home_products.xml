<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_size_8">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:contentDescription="@string/product_thumbnail"
        android:scaleType="fitCenter"
        android:src="@color/grey"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/material_size_4"
        android:background="?android:attr/selectableItemBackground"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:contentDescription="@string/product_thumbnail"
        android:scaleType="fitCenter"
        android:src="@color/grey"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        android:layout_marginStart="@dimen/material_size_4"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:contentDescription="@string/product_thumbnail"
        android:scaleType="fitCenter"
        android:src="@color/grey"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        android:layout_marginStart="@dimen/material_size_4"
        />
</LinearLayout>