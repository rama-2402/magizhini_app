    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="somename"
        android:textColor="@color/green_base"
        android:fontFamily="@font/roboto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_4"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginTop="@dimen/material_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="somename"
        android:textColor="@color/gray700"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/material_size_4"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginTop="@dimen/material_size_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        />

    <TextView
        android:id="@+id/tvRs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_size_8"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="@dimen/material_size_4"
        android:singleLine="true"
        android:text="Rs: "
        android:textColor="@color/complementary_orange"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/material_size_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCart"
        app:layout_constraintBottom_toBottomOf="@id/ivCart"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_size_4"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/complementary_orange"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvRs"
        app:layout_constraintTop_toTopOf="@id/tvRs"
        app:layout_constraintBottom_toBottomOf="@id/tvRs"/>

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:singleLine="true"
        android:text="Rs: 0"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/material_size_8"
        app:layout_constraintEnd_toStartOf="@id/ivCart"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
        app:layout_constraintStart_toEndOf="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="@+id/tvPrice" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_round_rectangle_8"
        android:backgroundTint="@color/green_base"
        app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
        android:contentDescription="@string/product_thumbnail"
        android:scaleType="centerInside"
        android:src="@drawable/ic_cart"
        android:padding="2dp"
        app:tint="@color/white"
        android:transitionName="thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIngredients"
        android:layout_marginEnd="@dimen/material_size_4"
        android:layout_marginBottom="@dimen/material_size_4"
        />

