<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<fragment
    android:id="@+id/map"
    map:layout_constraintTop_toTopOf="parent"
    map:layout_constraintEnd_toEndOf="parent"
    map:layout_constraintStart_toStartOf="parent"
    map:layout_constraintBottom_toBottomOf="parent"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapsActivity" />

        <TextView
            android:id="@+id/submit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/submit"
            android:textColor="@color/white"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/material_size_24"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:elevation="@dimen/material_size_12"
            android:gravity="center"
            android:paddingTop="@dimen/material_size_12"
            android:paddingBottom="@dimen/material_size_12"
            android:background="@drawable/shape_round_rectangle_12"
            android:backgroundTint="@color/matteRed"
            android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/material_size_16"
        android:padding="@dimen/material_size_8"
        android:elevation="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/shape_round_rectangle_12">

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/locating_first_time_might_take_some_time_please_wait"
            android:textColor="@color/green_base"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/locator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"
        android:text="FIND ME"
        android:paddingStart="@dimen/material_size_24"
        android:paddingEnd="@dimen/material_size_24"
        android:paddingTop="@dimen/material_size_12"
        android:paddingBottom="@dimen/material_size_12"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/green_base"
        android:layout_margin="@dimen/material_size_24"
        android:background="@drawable/shape_round_rectangle_8"
        android:elevation="@dimen/material_size_12"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>