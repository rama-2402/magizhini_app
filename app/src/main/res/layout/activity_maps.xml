<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<fragment
    android:id="@+id/map"
    map:layout_constraintTop_toTopOf="parent"
    map:layout_constraintEnd_toEndOf="parent"
    map:layout_constraintStart_toStartOf="parent"
    map:layout_constraintBottom_toBottomOf="parent"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapsActivity" />

    <RelativeLayout
        android:id="@+id/submit_location"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
         map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/material_size_24"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:elevation="10dp"
        android:gravity="center"
        android:background="@drawable/shape_round_rectangle_12"
        android:backgroundTint="@color/green_base">

      <TextView
          android:id="@+id/submit_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/submit"
          android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/material_size_16"
        android:padding="@dimen/material_size_8"
        android:elevation="10dp"
        android:gravity="center"
        android:background="@drawable/shape_round_rectangle_12">

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/locating_first_time_might_take_some_time_please_wait"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
             android:elevation="10dp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/locator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_address"
        android:layout_margin="@dimen/material_size_24"
        android:background="@drawable/shape_round_rectangle_12"
        android:padding="8dp"
        android:elevation="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>