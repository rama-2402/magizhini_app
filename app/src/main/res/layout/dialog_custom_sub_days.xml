<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectangle_16"
        android:paddingBottom="32dp"
        android:padding="@dimen/material_size_8"
        android:theme="@style/Theme.MaterialComponents.Light"
        >
        <ImageView
            android:id="@+id/ivBottomSheetIndicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_dialog_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PICK DELIVERY DAYS"
            android:textColor="@color/gray700"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/material_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBottomSheetIndicator"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cpMonday"
            style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/material_size_8"
            android:layout_marginEnd="@dimen/material_size_4"
            android:paddingTop="@dimen/material_size_4"
            android:paddingBottom="@dimen/material_size_4"
            android:text="Monday"
            android:textAlignment="center"
            android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            app:chipCornerRadius="@dimen/material_size_8"
            app:layout_constraintEnd_toStartOf="@id/cpTuesday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintWidth_percent=".45" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/cpTuesday"
                    style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_height="56dp"
                    android:text="Tuesday"
                    android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    app:chipCornerRadius="@dimen/material_size_8"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/material_size_4"
                    android:layout_marginTop="@dimen/material_size_8"
                    app:layout_constraintStart_toEndOf="@id/cpMonday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cpWednesday"
            style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/material_size_4"
            android:text="Wednesday"
            android:textAlignment="center"
            android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            app:chipCornerRadius="@dimen/material_size_8"
            app:layout_constraintStart_toStartOf="@+id/cpMonday"
            app:layout_constraintTop_toBottomOf="@id/cpMonday"
            app:layout_constraintWidth_percent=".45" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cpThursday"
            style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/material_size_4"
            android:text="Thursday"
            android:textAlignment="center"
            android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
            app:chipCornerRadius="@dimen/material_size_8"
            app:layout_constraintEnd_toEndOf="@+id/cpTuesday"
            app:layout_constraintTop_toBottomOf="@id/cpMonday"
            app:layout_constraintWidth_percent=".45" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/cpFriday"
                    style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_height="56dp"
                    android:text="Friday"
                    android:textAlignment="center"
                    android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    app:chipCornerRadius="@dimen/material_size_8"
                    android:layout_marginTop="@dimen/material_size_4"
                    android:layout_marginEnd="@dimen/material_size_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cpSaturday"
                    app:layout_constraintTop_toBottomOf="@id/cpWednesday"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/cpSaturday"
                    style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_height="56dp"
                    android:text="Saturday"
                    android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    app:chipCornerRadius="@dimen/material_size_8"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/material_size_4"
                    android:layout_marginTop="@dimen/material_size_4"
                    app:layout_constraintStart_toEndOf="@id/cpFriday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cpWednesday" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/cpSunday"
                    style="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="Sunday"
                    android:textAlignment="center"
                    android:theme="@style/Theme.MagizhiniOrganics.CustomChipTheme"
                    app:chipCornerRadius="@dimen/material_size_8"
                    android:layout_marginTop="@dimen/material_size_4"
                    android:layout_marginStart="@dimen/material_size_8"
                    android:layout_marginEnd="@dimen/material_size_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cpFriday"/>

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green_base"
                    android:text="CANCEL"
                    android:textStyle="bold"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_round_rectangle_8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingStart="@dimen/material_size_24"
                    android:paddingEnd="@dimen/material_size_24"
                    android:paddingTop="@dimen/material_size_12"
                    android:paddingBottom="@dimen/material_size_12"
                    android:layout_marginEnd="@dimen/material_size_4"
                    app:layout_constraintTop_toBottomOf="@id/cpSunday"
                    app:layout_constraintStart_toStartOf="@id/cpSunday"
                    app:layout_constraintEnd_toStartOf="@id/btnSave"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/material_size_8"
                    android:layout_marginBottom="@dimen/material_size_8" />

                <TextView
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_rectangle_8"
                    android:backgroundTint="@color/matteRed"
                    android:text="SELECT DAYS"
                    android:gravity="center"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingStart="@dimen/material_size_24"
                    android:paddingEnd="@dimen/material_size_24"
                    android:paddingTop="@dimen/material_size_12"
                    android:paddingBottom="@dimen/material_size_12"                    app:layout_constraintTop_toBottomOf="@id/cpSunday"
                    app:layout_constraintStart_toEndOf="@id/btnCancel"
                    app:layout_constraintEnd_toEndOf="@id/cpSunday"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/material_size_8"
                    android:layout_marginStart="@dimen/material_size_4"
                    android:layout_marginBottom="@dimen/material_size_8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>