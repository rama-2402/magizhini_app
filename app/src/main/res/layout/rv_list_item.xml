<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="155dp"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:background="@color/white">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/clProductItem"        android:layout_width="130dp"        android:layout_height="140dp"        android:layout_margin="@dimen/material_size_8"        android:elevation="@dimen/material_size_4"        android:background="@drawable/shape_round_rectangle_8"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"        >        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/ivProductThumbnail"            android:layout_width="match_parent"            android:layout_height="match_parent"            app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"            android:background="?android:attr/selectableItemBackground"            android:contentDescription="@string/product_thumbnail"            android:scaleType="fitCenter"            android:src="@drawable/ic_app_placeholder"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintBottom_toBottomOf="parent"            />        <View            android:id="@+id/ivCountBg"            android:layout_width="match_parent"            android:layout_height="50dp"            android:visibility="visible"            android:background="@drawable/bg_gradient_transparent_rounded"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent" />        <TextView            android:id="@+id/tvOrderItemCount"            android:layout_width="match_parent"            android:layout_height="25dp"            android:fontFamily="@font/roboto"            android:textColor="@color/white"            android:textSize="16sp"            android:gravity="center"            android:text="Purchased: 20"            android:layout_marginBottom="@dimen/material_size_2"            android:maxLines="1"            android:ellipsize="end"            android:visibility="visible"            android:singleLine="true"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout>    <TextView        android:id="@+id/tvProductName"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="somename"        android:textColor="@color/black"        android:fontFamily="@font/roboto"        android:textSize="16sp"        android:singleLine="true"        android:ellipsize="end"        android:layout_marginStart="@dimen/material_size_16"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/clProductItem"        app:layout_constraintTop_toTopOf="@id/clProductItem"        />    <TextView        android:id="@+id/tvPrice"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/material_size_16"        android:layout_marginTop="@dimen/material_size_8"        android:ellipsize="end"        android:fontFamily="@font/roboto"        android:singleLine="true"        android:text="Rs: 500"        android:textColor="@color/green_base"        android:textSize="14sp"        android:textStyle="bold"        app:layout_constraintStart_toEndOf="@id/clProductItem"        app:layout_constraintTop_toBottomOf="@id/tvProductName" />    <TextView        android:id="@+id/tvDiscount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:ellipsize="end"        android:fontFamily="@font/roboto"        android:singleLine="true"        android:text="Rs: 500"        android:textColor="@color/grey"        android:textSize="14sp"        android:textStyle="italic"        app:layout_constraintBottom_toTopOf="@+id/spProductVariant"        app:layout_constraintEnd_toEndOf="@+id/tvPrice"        app:layout_constraintStart_toStartOf="@+id/tvPrice"        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />    <TextView        android:id="@+id/tvAddItem"        android:layout_width="@dimen/material_size_64"        android:layout_height="35dp"        android:background="@drawable/shape_round_rectangle_8"        android:backgroundTint="@color/green_base"        android:text="ADD"        android:gravity="center"        android:textColor="@color/white"        android:textStyle="bold"        android:layout_marginEnd="@dimen/material_size_16"        app:layout_constraintBottom_toTopOf="@+id/spProductVariant"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />    <Spinner        android:id="@+id/spProductVariant"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:spinnerMode="dropdown"        android:layout_marginStart="@dimen/material_size_8"        android:layout_marginEnd="@dimen/material_size_8"        android:popupBackground="@drawable/shape_round_rectangle_8"        android:theme="@style/mySpinnerItemStyle"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/ivFavourite"        app:layout_constraintStart_toEndOf="@id/clProductItem"        app:layout_constraintTop_toBottomOf="@id/tvDiscount"/>    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/ivFavourite"        android:layout_width="25dp"        android:layout_height="25dp"        app:layout_constraintTop_toTopOf="@id/spProductVariant"        app:layout_constraintStart_toEndOf="@id/spProductVariant"        app:layout_constraintBottom_toBottomOf="@id/spProductVariant"        app:layout_constraintEnd_toEndOf="@id/ivReview"        android:src="@drawable/ic_favorite_outline"        android:layout_marginEnd="@dimen/material_size_16"        android:contentDescription="@string/favorites_icon"        app:tint="@color/green_base"        android:background="?android:attr/selectableItemBackgroundBorderless"        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"        />    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/ivReview"        android:layout_width="25dp"        android:layout_height="25dp"        android:background="?android:attr/selectableItemBackgroundBorderless"        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"        app:layout_constraintTop_toTopOf="@id/spProductVariant"        app:layout_constraintStart_toEndOf="@id/ivFavourite"        app:layout_constraintBottom_toBottomOf="@id/spProductVariant"        app:layout_constraintEnd_toEndOf="parent"        android:src="@drawable/ic_review_star"        android:contentDescription="@string/favorites_icon"        app:tint="@color/green_base" /></androidx.constraintlayout.widget.ConstraintLayout>