<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvProductItem"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="@dimen/material_size_8"
    android:layout_marginStart="@dimen/material_size_4"
    android:layout_marginEnd="@dimen/material_size_4"
    android:elevation="@dimen/material_size_4"
    android:background="@drawable/shape_round_rectangle_8"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    >

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/ivProductThumbnail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:contentDescription="@string/product_thumbnail"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_app_placeholder"
      android:background="?android:attr/selectableItemBackground"
      app:shapeAppearanceOverlay="@style/roundedImageViewRectangle"
      />

  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintHeight_percent=".5"
      android:background="@drawable/bg_gradient_transparent_rounded"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <TextView
      android:id="@+id/tvProductName"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fontFamily="@font/roboto"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:text="Product Name"
      android:layout_marginBottom="@dimen/material_size_2"
      android:maxLines="2"
      android:gravity="center|bottom"
      android:layout_marginStart="2dp"
      android:layout_marginEnd="2dp"
      android:ellipsize="end"
      app:layout_constraintTop_toTopOf="@id/view"
      app:layout_constraintBottom_toBottomOf="@id/view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>