<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/material_size_32"
        android:background="@drawable/shape_round_rectangle_16"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        >

        <ImageView
            android:id="@+id/ivBottomSheetIndicator"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/material_size_8"
            android:background="@drawable/bg_dialog_indicator"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvDueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Monthly Due: "
                android:textColor="@color/gray700"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginStart="@dimen/material_size_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/unsubscribe"
                app:layout_constraintBottom_toBottomOf="@id/unsubscribe"
                />
            <TextView
                android:id="@+id/tvDueAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Rs: 3000"
                android:textColor="@color/gray700"
                android:textStyle="bold"
                android:textSize="14dp"
                app:layout_constraintTop_toTopOf="@id/tvDueText"
                app:layout_constraintStart_toEndOf="@id/tvDueText"
                app:layout_constraintBottom_toBottomOf="@id/tvDueText"
                />

            <LinearLayout
                android:id="@+id/unsubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/matteRed"
                android:background="@drawable/shape_round_rectangle_8"
                android:elevation="@dimen/material_size_4"
                android:layout_margin="@dimen/material_size_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvUnsubscribe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/material_size_8"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="UNSUBSCRIBE"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September - 2022"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="@dimen/material_size_8"
                android:elevation="@dimen/material_size_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="12sp"
            app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
            app:compactCalendarTextColor="@color/gray700"
            app:compactCalendarOtherMonthDaysTextColor="@color/black"
            android:layout_marginTop="@dimen/material_size_4"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/green_base"
            app:compactCalendarCurrentDayBackgroundColor="@color/white"
            app:compactCalendarCurrentSelectedDayTextColor="@color/white"
            app:compactCalendarCurrentDayTextColor="@color/blue500"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_size_4"
            android:layout_marginEnd="@dimen/material_size_4"
            android:layout_marginBottom="@dimen/material_size_16"
            android:layout_marginTop="@dimen/material_size_16"
            >
            <ImageView
                android:id="@+id/ivDelivered"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shape_round_rectangle_16"
                android:backgroundTint="@color/green_base"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvDelivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/gray700"
                app:layout_constraintTop_toTopOf="@id/ivDelivered"
                app:layout_constraintBottom_toBottomOf="@id/ivDelivered"
                app:layout_constraintStart_toEndOf="@id/ivDelivered"
                android:layout_marginStart="@dimen/material_size_8"
                />
            <ImageView
                android:id="@+id/ivCancelled"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_round_rectangle_16"
                android:backgroundTint="@color/matteRed"
                android:layout_marginEnd="@dimen/material_size_4"
                app:layout_constraintEnd_toStartOf="@id/tvCancelled"
                app:layout_constraintTop_toTopOf="@id/tvCancelled"
                app:layout_constraintBottom_toBottomOf="@id/tvCancelled"/>

            <TextView
                android:id="@+id/tvCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_size_8"
                android:text="Cancelled"
                android:textColor="@color/gray700"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/ivCancelled"
                app:layout_constraintEnd_toStartOf="@id/ivNotDelivered"
                app:layout_constraintHorizontal_bias="0.606"
                app:layout_constraintStart_toEndOf="@id/tvDelivered"
                app:layout_constraintTop_toTopOf="@id/ivCancelled"
                />

            <ImageView
                android:id="@+id/ivNotDelivered"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_round_rectangle_16"
                android:backgroundTint="@color/orange200"
                app:layout_constraintEnd_toStartOf="@id/tvNotDelivered"
                android:layout_marginEnd="@dimen/material_size_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvNotDelivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Delivered"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/gray700"
                app:layout_constraintTop_toTopOf="@id/ivDelivered"
                app:layout_constraintBottom_toBottomOf="@id/ivDelivered"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</layout>