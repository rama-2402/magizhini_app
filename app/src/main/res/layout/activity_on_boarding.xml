<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_base"
    tools:context=".ui.OnBoardingActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rotation="180"
        android:elevation="@dimen/material_size_16"
        android:background="@drawable/bg_top_rounded_32"/>

    <ImageView
        android:id="@+id/ivBottomCircle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".9"
        android:visibility="invisible"
        android:background="@drawable/bg_onboarding_circle"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/material_size_16"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-36dp"
        android:layout_marginTop="-44dp"
        android:background="@drawable/bg_onboarding_circle"
        android:visibility="invisible"
        android:elevation="@dimen/material_size_16"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".9" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGradientCircle"
        android:layout_width="@dimen/material_size_64"
        android:layout_height="@dimen/material_size_64"
        android:layout_marginEnd="@dimen/material_size_24"
        android:elevation="@dimen/material_size_16"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/material_size_32"
        android:rotation="330"
        android:src="@drawable/bg_onboarding_circle_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <LinearLayout
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".45"
        android:src="@drawable/ic_chevron_right"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:backgroundTint="@color/complementary_orange"
        android:background="@drawable/shape_round_rectangle_16"
        android:paddingTop="@dimen/material_size_8"
        android:paddingBottom="@dimen/material_size_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        android:elevation="18dp">

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:id="@+id/next_screen"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:elevation="@dimen/material_size_16"-->
<!--            android:clickable="true"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_loop="true"-->
<!--            app:lottie_speed="2"-->
<!--            app:lottie_rawRes="@raw/next_arrow" />-->

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="22sp"
            android:fontFamily="@font/baloo"
            android:textStyle="bold"
            />

    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:elevation="@dimen/material_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollIndicators="bottom"/>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/ciPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:ci_drawable_unselected="@drawable/unselected_indicator"
        app:ci_drawable="@drawable/selected_indicator"
        app:layout_constraintTop_toBottomOf="@+id/btnNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>