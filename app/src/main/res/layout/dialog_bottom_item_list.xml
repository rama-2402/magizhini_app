<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:layout_width="match_parent"    android:layout_height="500dp"    android:orientation="vertical"    android:background="@drawable/shape_round_rectangle_16"    android:gravity="center_horizontal"    xmlns:android="http://schemas.android.com/apk/res/android">    <ImageView        android:id="@+id/ivBottomSheetIndicator"        android:layout_width="@dimen/material_size_48"        android:layout_height="@dimen/material_size_4"        android:src="@drawable/bg_dialog_indicator"        android:layout_marginTop="@dimen/material_size_8"        />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/rvItemsList"        android:layout_marginTop="@dimen/material_size_8"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="@dimen/material_size_16"        /></LinearLayout>