<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagizhiniOrganics" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_base</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryVariant">@color/green_base_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_base</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorAccent">@color/green_base</item>
        <item name="android:textColorPrimary">@color/gray700</item>
        <item name="android:listDivider">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

<!--    splash screen theme-->
    <style name="splashScreenTheme" parent="Theme.MagizhiniOrganics.NoActionBar" >
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/green_base</item>
    </style>

    <!--    No ActionBar theme-->
    <style name="Theme.MagizhiniOrganics.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:statusBarColor">@color/green_base</item>
        <item name="colorControlHighlight">@color/green_light</item>
        <!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
        <item name="colorAccent">@color/green_base</item>
        <item name="android:colorEdgeEffect">@color/green_base</item>
<!--        <item name="android:colorControlHighlight">@color/green_base</item>-->
        <item name="android:textColorPrimary">@color/gray700</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--    Rounded corner bottomSheet dialog-->
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:textColor">@color/gray700</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray700</item>
    </style>

    <!--    Date picker-->
    <style name="pickerDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/shape_round_rectangle_16</item>
        <item name="android:background">@color/green_base</item>
        <item name="android:dialogCornerRadius" tools:targetApi="q">@dimen/material_size_16</item>
        <item name="colorAccent">@color/matteRed</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/matteRed</item>
    </style>

    <!--    Theme for custom action bar-->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!--    Chip custom theme-->
    <style name="Theme.MagizhiniOrganics.CustomChipTheme" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

    <!--    Rounded Imageview-->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="roundedImageViewChat">
        <item name="cornerFamily">rounded</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="roundedImageViewRectangle">
        <item name="cornerFamily">rounded</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--    spinner style for maintaining the same theme in both themes-->
    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/gray700</item>
        <item name="android:popupBackground">@color/white</item>
        <!--        <item name="android:windowBackground">@drawable/popup_background</item>-->
        <item name="android:dialogTheme">@style/CustomAlertDialog</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="fontFamily">@font/roboto</item>

    </style>

    <style name="NavigationView" >
        <item name="android:listDivider">@color/grey</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--    custom succecssdialog-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--    Number picker divider color to black-->
    <style name="MyAppTheme.NumberPicker" parent="Theme.MagizhiniOrganics.NoActionBar">
        <item name="android:colorControlNormal"> @color/gray700 </item>
    </style>
</resources>