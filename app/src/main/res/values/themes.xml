<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagizhiniOrganics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_base</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryVariant">@color/green_base_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_base</item>
        <item name="colorAccent">@color/green_base</item>
        <item name="android:listDivider">@color/grey</item>
<!--        <item name="android:textColorPrimary">@color/white</item>-->
        <!-- Customize your theme here. -->

    </style>

<!--    splash screen theme-->
    <style name="splashScreenTheme" parent="Theme.MagizhiniOrganics.NoActionBar" >
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@drawable/spalsh_screen</item>
    </style>

<!--    No ActionBar theme-->
    <style name="Theme.MagizhiniOrganics.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/green_base</item>
        <item name="colorControlHighlight">@color/green_light</item>
        <!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
        <item name="colorAccent">@color/green_base</item>
        <item name="android:colorEdgeEffect">@color/green_base</item>
        <!--        <item name="android:colorControlHighlight">@color/green_base</item>-->
        <item name="android:textColorPrimary">@color/gray700</item>
    </style>

    <!--    Rounded corner bottomsheet dialog-->
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:textColor">@color/gray700</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray700</item>

    </style>

<!--    Theme for custom action bar-->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

<!--    Chip custom theme-->
    <style name="Theme.MagizhiniOrganics.CustomChipTheme" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

<!--    Rounded Imageview-->
    <style name="roundedImageViewRounded">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="roundedImageViewChat">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="roundedImageViewRectangle">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

<!--    spinner style for maintaining the same theme in both themes-->
    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/gray700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="NavigationView" >
        <item name="android:listDivider">@color/grey</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="Theme.MagizhiniOrganics.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MagizhiniOrganics.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>